<?xml version="1.0" encoding="utf-8" ?>

<rss version='2.0' xmlns:content='http://purl.org/rss/1.0/modules/content/' xmlns:wfw='http://wellformedweb.org/CommentAPI/' xmlns:dc='http://purl.org/dc/elements/1.1/' xmlns:atom='http://www.w3.org/2005/Atom'>
  <channel>
    <title>{{name}}</title>
    <atom:link href="{{url}}{{feedPath}}" rel="self" type="application/rss+xml"></atom:link>
    <link>{{url}}</link>
    <description>{{description}}</description>
    <pubDate>{{getLastPublishDate}}</pubDate>
    <language>en</language>

    {{! TODO: This should probably be sorted. }}
    {{#each contents.articles}}
    <item>
      <title>{{[index.md].metadata.title}}</title>
      <link>{{../url}}{{[index.md].url}}</link>
      <pubDate>{{[index.md].rfc822date}}</pubDate>
      <guid isPermaLink="true">{{../url}}{{[index.md].url}}</guid>
      <author>{{[index.md].metadata.author}}</author>
      <description>{{stripTags [index.md].intro}}</description>
    </item>
    {{/each}}

  </channel>
</rss>
