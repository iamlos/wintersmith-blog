{
  "locals": {
    "url": "http://technoholic.ca",
    "name": "Technology and Design - technoholic.ca",
    "owner": "Peter Szymczak",
    "description": "One man's obsession with creating the interwebs.",
    "feedPath": "/feed.xml"
  },
  "plugins": [
    "./plugins/paginator.coffee",
    "wintersmith-handlebars",
    "./plugins/datajson.coffee"
  ],
  "shared": {
    "articles": "articles"
  },
  "require": {
    "moment": "moment",
    "_": "underscore",
    "typogr": "typogr"
  },
  "markdown": {
    "smartLists": true,
    "smartypants": true
  },
  "paginator": {
    "perPage": 4,
    "template": "blog.hbs",
    "first": "articles/index.html",
    "filename": "articles/page/%d/index.html"
  },
  "ignore": [
    "**/.DS_Store"
  ]
}
